<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-success text-white">
          <h3 class="text-center mb-0">
            <i class="fas fa-check-circle"></i> File Uploaded Successfully!
          </h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5>File Details</h5>
              <table class="table table-borderless">
                <tr>
                  <td><strong>Title:</strong></td>
                  <td><%= material.title %></td>
                </tr>
                <tr>
                  <td><strong>File Name:</strong></td>
                  <td><%= material.fileName %></td>
                </tr>
                <tr>
                  <td><strong>File Type:</strong></td>
                  <td><%= material.fileType.toUpperCase() %></td>
                </tr>
                <tr>
                  <td><strong>File Size:</strong></td>
                  <td><%= (material.fileSize / 1024).toFixed(2) %> KB</td>
                </tr>
                <tr>
                  <td><strong>Status:</strong></td>
                  <td>
                    <% if (material.status === 'ready') { %>
                      <span class="badge bg-success">Ready</span>
                    <% } else if (material.status === 'processing') { %>
                      <span class="badge bg-warning">Processing</span>
                    <% } else { %>
                      <span class="badge bg-danger">Error</span>
                    <% } %>
                  </td>
                </tr>
                <tr>
                  <td><strong>Uploaded:</strong></td>
                  <td><%= new Date(material.createdAt).toLocaleString() %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-6">
              <h5>Actions</h5>
              <div class="d-grid gap-2">
                <a href="/upload" class="btn btn-primary">
                  <i class="fas fa-upload"></i> Upload Another File
                </a>
                <a href="/" class="btn btn-secondary">
                  <i class="fas fa-home"></i> Go to Home
                </a>
                <button class="btn btn-outline-info" onclick="window.print()">
                  <i class="fas fa-print"></i> Print Details
                </button>
              </div>

              <% if (material.status === 'ready') { %>
                <div class="mt-3">
                  <h6>Content Preview</h6>
                  <div class="border p-2 bg-light" style="max-height: 200px; overflow-y: auto;">
                    <% if (material.content) { %>
                      <p><%= material.content.substring(0, 500) %>...</p>
                    <% } else { %>
                      <p class="text-muted">Content extraction in progress...</p>
                    <% } %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
