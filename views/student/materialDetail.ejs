<% layout('layout/boilerplate.ejs') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="content-card mb-4" style="background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%); border-radius: 25px; padding: 60px 40px; box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15); position: relative; overflow: hidden; border: 1px solid rgba(102, 126, 234, 0.1);">
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);"></div>
        <div class="card-header mb-4">
          <div class="d-flex align-items-center">
            <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 20px; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);">
              <i class="fas fa-user-circle" style="color: white; font-size: 24px;"></i>
            </div>
            <div>
              <h2 style="color: #2c3e50; font-weight: 700; margin-bottom: 5px; font-size: 1.8rem;">
                <%= material.title %>
              </h2>
              <p style="color: #6c757d; margin: 0; font-size: 1rem;">Uploaded <%= new Date(material.createdAt).toLocaleDateString() %></p>
            </div>
          </div>
        </div>
        <div class="card-content">
          <p style="color: #495057; font-size: 1.1rem; line-height: 1.7; margin: 0;">
            <%= material.description || 'No description provided.' %>
          </p>
          <div class="material-meta mt-4 mb-4">
            <span style="display: inline-block; background: #f8f9fa; color: #667eea; padding: 6px 12px; border-radius: 20px; font-size: 0.95rem; font-weight: 600; margin-right: 10px;">Type: <%= material.fileType.toUpperCase() %></span>
            <span style="display: inline-block; background: #f8f9fa; color: #764ba2; padding: 6px 12px; border-radius: 20px; font-size: 0.95rem; font-weight: 600; margin-right: 10px;">Size: <%= (material.fileSize / 1024).toFixed(2) %> KB</span>
            <span style="display: inline-block; background: #f8f9fa; color: #28a745; padding: 6px 12px; border-radius: 20px; font-size: 0.95rem; font-weight: 600;">Status: <%= material.status %></span>
          </div>
          <div class="material-actions" style="display: flex; gap: 15px;">
            <a href="<%= material.fileUrl %>" target="_blank" class="btn btn-primary flex-fill" style="border-radius: 25px; font-weight: 600; padding: 12px 20px; box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3); transition: all 0.3s ease;">
              <i class="fas fa-download me-2"></i>Download
            </a>
            <form action="/materials/<%= material._id %>?_method=DELETE" method="POST" class="d-inline flex-fill">
              <button type="submit" class="btn btn-outline-danger flex-fill" onclick="return confirm('Are you sure you want to delete this material?')" style="border-radius: 25px; font-weight: 600; padding: 12px 20px; border: 2px solid #dc3545; transition: all 0.3s ease;">
                <i class="fas fa-trash-alt me-2"></i>Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.content-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
}
.material-actions .btn:hover {
  transform: translateY(-2px);
}
</style>