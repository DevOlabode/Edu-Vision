<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <!-- Page Header -->
      <div class="materials-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 20px; padding: 30px; margin-bottom: 30px; color: white; box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h1 class="mb-2" style="font-weight: 700; font-size: 2.5rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
              <i class="fas fa-book-open me-3"></i>My Study Materials
            </h1>
            <p class="mb-0 opacity-75" style="font-size: 1.1rem;">Access and manage your uploaded documents</p>
          </div>
          <div class="text-end">
            <a href="/upload" class="btn btn-light btn-lg px-4 py-3" style="border-radius: 15px; font-weight: 600; box-shadow: 0 6px 20px rgba(0,0,0,0.15); transition: all 0.3s ease;">
              <i class="fas fa-plus me-2"></i>Upload New Material
            </a>
          </div>
        </div>
      </div>

      <% if (materials && materials.length > 0) { %>
        <!-- Materials Grid -->
        <div class="materials-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(400px, 1fr)); gap: 30px;">
          <% materials.forEach(material => { %>
            <div class="content-card mb-4" style="background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%); border-radius: 20px; padding: 40px; box-shadow: 0 15px 35px rgba(102, 126, 234, 0.1); border: 1px solid rgba(102, 126, 234, 0.1); position: relative; overflow: hidden; transition: all 0.3s ease;">
              <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, <%= material.status === 'ready' ? '#28a745 0%, #20c997 100%' : material.status === 'processing' ? '#ffc107 0%, #fd7e14 100%' : '#dc3545 0%, #e83e8c 100%' %>);"></div>
              <div class="card-header mb-4">
                <div class="d-flex align-items-center">
                  <div style="width: 60px; height: 60px; background: linear-gradient(135deg, <%= material.status === 'ready' ? '#28a745 0%, #20c997 100%' : material.status === 'processing' ? '#ffc107 0%, #fd7e14 100%' : '#dc3545 0%, #e83e8c 100%' %>); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 20px; box-shadow: 0 8px 25px <%= material.status === 'ready' ? 'rgba(40, 167, 69, 0.3)' : material.status === 'processing' ? 'rgba(255, 193, 7, 0.3)' : 'rgba(220, 53, 69, 0.3)' %>;">
                    <i class="fas fa-file-<%= material.fileType === 'pdf' ? 'pdf' : material.fileType === 'docx' ? 'word' : 'alt' %>" style="color: white; font-size: 24px;"></i>
                  </div>
                  <div>
                    <h2 style="color: #2c3e50; font-weight: 700; margin-bottom: 5px; font-size: 1.5rem;">
                      <a href="/materials/<%= material._id %>" class="text-decoration-none" style="color: #2c3e50; transition: color 0.3s ease;">
                        <%= material.title %>
                      </a>
                    </h2>
                    <p style="color: #6c757d; margin: 0; font-size: 1rem;"><%= material.fileType.toUpperCase() %> â€¢ <%= (material.fileSize / 1024).toFixed(2) %> KB</p>
                  </div>
                </div>
              </div>
              <div class="card-content">
                <div class="material-meta mb-4">
                  <div class="meta-item mb-2" style="display: flex; align-items: center; font-size: 0.95rem; color: #495057;">
                    <i class="fas fa-file-signature me-2" style="width: 18px; color: #667eea;"></i>
                    <span style="font-weight: 500;"><%= material.fileName %></span>
                  </div>
                  <div class="meta-item mb-2" style="display: flex; align-items: center; font-size: 0.95rem; color: #495057;">
                    <i class="fas fa-calendar-alt me-2" style="width: 18px; color: #667eea;"></i>
                    <span>Uploaded <%= new Date(material.createdAt).toLocaleDateString() %></span>
                  </div>
                  <div class="meta-item" style="display: flex; align-items: center; font-size: 0.95rem; color: #495057;">
                    <i class="fas fa-<%= material.status === 'ready' ? 'check-circle text-success' : material.status === 'processing' ? 'clock text-warning' : 'exclamation-triangle text-danger' %> me-2" style="width: 18px;"></i>
                    <span style="font-weight: 600; text-transform: capitalize;"><%= material.status %></span>
                  </div>
                </div>
                <div class="material-actions" style="display: flex; gap: 15px;">
                  <a href="/materials/<%= material._id %>" class="btn btn-primary flex-fill" style="border-radius: 25px; font-weight: 600; padding: 12px 20px; box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3); transition: all 0.3s ease;">
                    <i class="fas fa-eye me-2"></i>View Material
                  </a>
                  <form action="/materials/<%= material._id %>?_method=DELETE" method="POST" class="d-inline flex-fill">
                    <button type="submit" class="btn btn-outline-danger flex-fill" onclick="return confirm('Are you sure you want to delete this material?')" style="border-radius: 25px; font-weight: 600; padding: 12px 20px; border: 2px solid #dc3545; transition: all 0.3s ease;">
                      <i class="fas fa-trash-alt me-2"></i>Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <!-- Materials Count -->
        <div class="materials-count mt-4 text-center">
          <div style="display: inline-block; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); padding: 15px 30px; border-radius: 25px; box-shadow: 0 4px 15px rgba(0,0,0,0.05);">
            <span style="color: #2c3e50; font-weight: 700; font-size: 1.1rem;">
              <i class="fas fa-layer-group me-2" style="color: #667eea;"></i>
              <%= materials.length %> Material<%= materials.length !== 1 ? 's' : '' %> Total
            </span>
          </div>
        </div>
      <% } else { %>
        <!-- Empty State -->
        <div class="empty-state text-center" style="background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%); border-radius: 20px; padding: 60px 40px; margin-top: 30px; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.08); border: 2px dashed rgba(102, 126, 234, 0.2);">
          <div style="font-size: 4rem; color: #667eea; margin-bottom: 20px; opacity: 0.6;">
            <i class="fas fa-book-open"></i>
          </div>
          <h3 style="color: #2c3e50; font-weight: 700; margin-bottom: 15px;">No Materials Yet</h3>
          <p style="color: #6c757d; font-size: 1.1rem; margin-bottom: 30px;">Start building your study library by uploading your first document</p>
          <a href="/upload" class="btn btn-primary btn-lg px-5 py-3" style="border-radius: 30px; font-weight: 600; box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);">
            <i class="fas fa-upload me-2"></i>Upload Your First Material
          </a>
        </div>
      <% } %>

      <!-- Study Notes Section -->
      <div class="study-notes-section mt-5">
        <!-- Hero Header -->
        <div class="study-notes-hero text-center mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 25px; padding: 60px 40px; color: white; box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3); position: relative; overflow: hidden;">
          <div style="position: absolute; top: -30px; right: -30px; width: 150px; height: 150px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
          <div style="position: absolute; bottom: -40px; left: -40px; width: 200px; height: 200px; background: rgba(255,255,255,0.05); border-radius: 50%;"></div>
          <div style="font-size: 4rem; margin-bottom: 20px; opacity: 0.9;">
            <i class="fas fa-graduation-cap"></i>
          </div>
          <h1 style="font-weight: 700; font-size: 3rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.3); margin-bottom: 15px;">
            Study Notes
          </h1>
          <p style="opacity: 0.9; margin-bottom: 0; font-size: 1.2rem; max-width: 600px; margin-left: auto; margin-right: auto;">
            Comprehensive overview of skills, experience, and achievements in full-stack development
          </p>
        </div>

        <!-- Study Notes Content -->
        <div class="study-notes-content">
          <!-- Introduction Card -->
          <div class="content-card mb-5" style="background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%); border-radius: 20px; padding: 40px; box-shadow: 0 15px 35px rgba(102, 126, 234, 0.1); border: 1px solid rgba(102, 126, 234, 0.1); position: relative; overflow: hidden;">
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);"></div>
            <div class="card-header mb-4">
              <div class="d-flex align-items-center">
                <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 20px; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);">
                  <i class="fas fa-user-circle" style="color: white; font-size: 24px;"></i>
                </div>
                <div>
                  <h2 style="color: #2c3e50; font-weight: 700; margin-bottom: 5px; font-size: 1.8rem;">Introduction</h2>
                  <p style="color: #6c757d; margin: 0; font-size: 1rem;">About Samuel Olabode</p>
                </div>
              </div>
            </div>
            <div class="card-content">
              <p style="color: #495057; font-size: 1.1rem; line-height: 1.7; margin: 0;">
                Samuel Olabode is a self-taught full-stack developer with proficiency in JavaScript, Node.js, Express, and MongoDB. He is passionate about building practical web applications focusing on authentication, API design, and AI integration.
              </p>
            </div>
          </div>

          <!-- Technical Skills Section -->
          <div class="content-card mb-5" style="background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%); border-radius: 20px; padding: 40px; box-shadow: 0 15px 35px rgba(102, 126, 234, 0.1); border: 1px solid rgba(102, 126, 234, 0.1);">
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, #28a745 0%, #20c997 100%);"></div>
            <div class="card-header mb-4">
              <div class="d-flex align-items-center">
                <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 20px; box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);">
                  <i class="fas fa-code" style="color: white; font-size: 24px;"></i>
                </div>
                <div>
                  <h2 style="color: #2c3e50; font-weight: 700; margin-bottom: 5px; font-size: 1.8rem;">Technical Skills</h2>
                  <p style="color: #6c757d; margin: 0; font-size: 1rem;">Core competencies and technologies</p>
                </div>
              </div>
            </div>
            <div class="skills-showcase">
              <div class="skills-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px;">
                <div class="skill-card" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); border-radius: 15px; padding: 25px; border: 1px solid rgba(102, 126, 234, 0.1); transition: all 0.3s ease; position: relative; overflow: hidden;">
                  <div style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);"></div>
                  <div class="skill-icon mb-3">
                    <div style="width: 45px; height: 45px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);">
                      <i class="fas fa-code" style="color: white; font-size: 18px;"></i>
                    </div>
                  </div>
                  <h5 style="color: #2c3e50; font-weight: 700; margin-bottom: 15px; font-size: 1.2rem;">Languages</h5>
                  <div class="skill-list">
                    <span class="skill-tag" style="display: inline-block; background: rgba(102, 126, 234, 0.1); color: #667eea; padding: 6px 12px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin: 2px;">JavaScript</span>
                    <span class="skill-tag" style="display: inline-block; background: rgba(102, 126, 234, 0.1); color: #667eea; padding: 6px 12px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin: 2px;">HTML</span>
                    <span class="skill-tag" style="display: inline-block; background: rgba(102, 126, 234, 0.1); color: #667eea; padding: 6px 12px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin: 2px;">CSS</span>
                  </div>
                </div>
                <div class="skill-card" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); border-radius: 15px; padding: 25px; border: 1px solid rgba(102, 126, 234, 0.1); transition: all 0.3s ease;">
                  <div style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, #007bff 0%, #6610f2 100%);"></div>
                  <div class="skill-icon mb-3">
                    <div style="width: 45px; height: 45px; background: linear-gradient(135deg, #007bff 0%, #6610f2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);">
                      <i class="fas fa-server" style="color: white; font-size: 18px;"></i>
                    </div>
                  </div>
                  <h5 style="color: #2c3e50; font-weight: 700; margin-bottom: 15px; font-size: 1.2rem;">Backend</h5>
                  <div class="skill-list">
                    <span class="skill-tag" style="display: inline-block; background: rgba(0, 123, 255, 0.1); color: #007bff; padding: 6px 12px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin: 2px;">Node.js</span>
                    <span class="skill-tag" style="display: inline-block; background: rgba(0, 123, 255, 0.1); color: #007bff; padding: 6px 12px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin: 2px;">Express.js</span>
                    <span class="skill-tag" style="display: inline-block; background: rgba(0, 123, 255, 0.1); color: #007bff; padding: 6px 12px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin: 2px;">RESTful API</span>
                  </div>
                </div>
                <div class="skill-card" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); border-radius: 15px; padding: 25px; border: 1px solid rgba(102, 126, 234, 0.1); transition: all 0.3s ease;">
                  <div style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, #6f42c1 0%, #e83e8c 100%);"></div>
                  <div class="skill-icon mb-3">
                    <div style="width: 45px; height: 45px; background: linear-gradient(135deg, #6f42c1 0%, #e83e8c 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(111, 66, 193, 0.3);">
                      <i class="fas fa-desktop" style="color: white; font-size: 18px;"></i>
                    </div>
                  </div>
                  <h5 style="color: #2c3e50; font-weight: 700; margin-bottom: 15px; font-size: 1.2rem;">Frontend</h5>
                  <div class="skill-list">
    </div>
  </div>
</div>

<style>
.content-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
}

.material-title a:hover {
  color: #667eea !important;
}

.material-actions .btn:hover {
  transform: translateY(-2px);
}

.project-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
}

.certification-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
}
</style>
