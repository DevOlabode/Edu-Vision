<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Complete Your Profile</h3>
        </div>
        <div class="card-body">
          <form action="/complete-profile" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="bio" class="form-label">Bio (Optional)</label>
              <textarea class="form-control" id="bio" name="bio" rows="3" placeholder="Tell us about yourself..."></textarea>
            </div>
            <div class="mb-3">
              <label for="role" class="form-label">Role</label>
              <select class="form-select" id="role" name="role" required>
                <option value="">Select Role</option>
                <option value="Teacher">Teacher</option>
                <option value="Student">Student</option>
              </select>
            </div>
            <div class="mb-3" id="studentTypeDiv" style="display: none;">
              <label for="studentType" class="form-label">Student Type</label>
              <select class="form-select" id="studentType" name="studentType">
                <option value="">Select Type</option>
                <option value="High School">High School</option>
                <option value="University/College">University/College</option>
              </select>
            </div>
            <div class="mb-3" id="gradeDiv" style="display: none;">
              <label for="grade" class="form-label">Grade</label>
              <select class="form-select" id="grade" name="grade">
                <option value="">Select Grade</option>
                <option value="9">9th Grade</option>
                <option value="10">10th Grade</option>
                <option value="11">11th Grade</option>
                <option value="12">12th Grade</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Complete Profile</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>