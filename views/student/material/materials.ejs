<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <!-- Page Header -->
      <div class="materials-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 20px; padding: 30px; margin-bottom: 30px; color: white; box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h1 class="mb-2" style="font-weight: 700; font-size: 2.5rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
              <i class="fas fa-book-open me-3"></i>My Study Materials
            </h1>
            <p class="mb-0 opacity-75" style="font-size: 1.1rem;">Access and manage your uploaded documents</p>
          </div>
          <div class="text-end">
            <a href="/upload" class="btn btn-light btn-lg px-4 py-3" style="border-radius: 15px; font-weight: 600; box-shadow: 0 6px 20px rgba(0,0,0,0.15); transition: all 0.3s ease;">
              <i class="fas fa-plus me-2"></i>Upload New Material
            </a>
          </div>
        </div>
      </div>

      <% if (materials && materials.length > 0) { %>
        <!-- Materials Grid styled like Study Notes -->
        <div class="materials-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(400px, 1fr)); gap: 30px;">
          <% materials.forEach(material => { %>
            <div class="content-card mb-4" style="background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%); border-radius: 25px; padding: 60px 40px; box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15); position: relative; overflow: hidden; border: 1px solid rgba(102, 126, 234, 0.1);">
              <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);"></div>
              <div class="card-header mb-4">
                <div class="d-flex align-items-center">
                  <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 20px; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);">
                    <i class="fas fa-user-circle" style="color: white; font-size: 24px;"></i>
                  </div>
                  <div>
                    <h2 style="color: #2c3e50; font-weight: 700; margin-bottom: 5px; font-size: 1.8rem;">
                      <a href="/materials/<%= material._id %>" class="text-decoration-none" style="color: #2c3e50; transition: color 0.3s ease;">
                        <%= material.title %>
                      </a>
                    </h2>
                    <p style="color: #6c757d; margin: 0; font-size: 1rem;">Uploaded <%= new Date(material.createdAt).toLocaleDateString() %></p>
                  </div>
                </div>
              </div>
              <div class="card-content">
                <p style="color: #495057; font-size: 1.1rem; line-height: 1.7; margin: 0;">
                  <%= material.description || 'No description provided.' %>
                </p>
                <div class="material-meta mt-4 mb-4">
                  <span style="display: inline-block; background: #f8f9fa; color: #667eea; padding: 6px 12px; border-radius: 20px; font-size: 0.95rem; font-weight: 600; margin-right: 10px;">Type: <%= material.fileType.toUpperCase() %></span>
                  <span style="display: inline-block; background: #f8f9fa; color: #764ba2; padding: 6px 12px; border-radius: 20px; font-size: 0.95rem; font-weight: 600; margin-right: 10px;">Size: <%= (material.fileSize / 1024).toFixed(2) %> KB</span>
                  <span style="display: inline-block; background: #f8f9fa; color: #28a745; padding: 6px 12px; border-radius: 20px; font-size: 0.95rem; font-weight: 600;">Status: <%= material.status %></span>
                </div>
                <div class="material-actions" style="display: flex; gap: 15px;">
                  <a href="/materials/<%= material._id %>" class="btn btn-primary flex-fill" style="border-radius: 25px; font-weight: 600; padding: 12px 20px; box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3); transition: all 0.3s ease;">
                    <i class="fas fa-eye me-2"></i>View Material
                  </a>
                  <form action="/materials/<%= material._id %>?_method=DELETE" method="POST" class="d-inline flex-fill">
                    <button type="submit" class="btn btn-outline-danger flex-fill" onclick="return confirm('Are you sure you want to delete this material?')" style="border-radius: 25px; font-weight: 600; padding: 12px 20px; border: 2px solid #dc3545; transition: all 0.3s ease;">
                      <i class="fas fa-trash-alt me-2"></i>Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
        <!-- Materials Count -->
        <div class="materials-count mt-4 text-center">
          <div style="display: inline-block; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); padding: 15px 30px; border-radius: 25px; box-shadow: 0 4px 15px rgba(0,0,0,0.05);">
            <span style="color: #2c3e50; font-weight: 700; font-size: 1.1rem;">
              <i class="fas fa-layer-group me-2" style="color: #667eea;"></i>
              <%= materials.length %> Material<%= materials.length !== 1 ? 's' : '' %> Total
            </span>
          </div>
        </div>
      <% } else { %>
        <!-- Empty State -->
        <div class="empty-state text-center" style="background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%); border-radius: 20px; padding: 60px 40px; margin-top: 30px; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.08); border: 2px dashed rgba(102, 126, 234, 0.2);">
          <div style="font-size: 4rem; color: #667eea; margin-bottom: 20px; opacity: 0.6;">
            <i class="fas fa-book-open"></i>
          </div>
          <h3 style="color: #2c3e50; font-weight: 700; margin-bottom: 15px;">No Materials Yet</h3>
          <p style="color: #6c757d; font-size: 1.1rem; margin-bottom: 30px;">Start building your study library by uploading your first document</p>
          <a href="/upload" class="btn btn-primary btn-lg px-5 py-3" style="border-radius: 30px; font-weight: 600; box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);">
            <i class="fas fa-upload me-2"></i>Upload Your First Material
          </a>
        </div>
      <% } %>
    </div>
  </div>
</div>

<style>
.content-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
}

.material-title a:hover {
  color: #667eea !important;
}

.material-actions .btn:hover {
  transform: translateY(-2px);
}

.project-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
}

.certification-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
}
</style>
