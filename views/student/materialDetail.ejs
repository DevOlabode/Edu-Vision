<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3><%= material.title %></h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong>File Name:</strong> <%= material.fileName %></p>
              <p><strong>File Type:</strong> <%= material.fileType %></p>
              <p><strong>File Size:</strong> <%= (material.fileSize / 1024).toFixed(2) %> KB</p>
              <p><strong>Status:</strong>
                <span class="badge <%= material.status === 'ready' ? 'bg-success' : material.status === 'processing' ? 'bg-warning' : 'bg-danger' %>">
                  <%= material.status %>
                </span>
              </p>
              <p><strong>Uploaded:</strong> <%= new Date(material.createdAt).toLocaleDateString() %></p>
            </div>
            <div class="col-md-6">
              <a href="https://res.cloudinary.com/demb9vgs8/raw/upload/<%= material.cloudinaryId %>" target="_blank" class="btn btn-primary">Download File</a>
              <form action="/materials/<%= material._id %>?_method=DELETE" method="POST" class="d-inline ms-2">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this material?')">Delete</button>
              </form>
            </div>
          </div>

          <% if (material.summary) { %>
            <hr>
            <%
              const summaryParts = material.summary.split('Flashcards:');
              const studyNotes = summaryParts[0].replace('Study Notes:', '').trim();
              const flashcards = summaryParts[1] ? summaryParts[1].trim() : '';
            %>
            <div class="mt-3">
              <% if (studyNotes) { %>
                <h5>Study Notes:</h5>
                <ul class="list-group list-group-flush mb-4">
                  <% studyNotes.split('\n').forEach(note => { %>
                    <% if (note.trim().startsWith('-')) { %>
                      <li class="list-group-item"><%= note.trim().substring(1).trim() %></li>
                    <% } %>
                  <% }); %>
                </ul>
              <% } %>

              <% if (flashcards) { %>
                <h5>Flashcards:</h5>
                <div class="row">
                  <% flashcards.split('\n').forEach(card => { %>
                    <% if (card.trim() && /^\d+\./.test(card.trim())) { %>
                      <div class="col-md-6 mb-3">
                        <div class="card">
                          <div class="card-body">
                            <p class="card-text"><%= card.trim() %></p>
                          </div>
                        </div>
                      </div>
                    <% } %>
                  <% }); %>
                </div>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
