<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <!-- Profile Header -->
      <div class="profile-header text-center mb-5">
        <div style="background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%); border-radius: 25px; padding: 50px 30px; color: white; box-shadow: 0 20px 40px rgba(108, 92, 231, 0.3); position: relative; overflow: hidden;">
          <div style="position: absolute; top: -20px; right: -20px; width: 100px; height: 100px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
          <div style="position: absolute; bottom: -30px; left: -30px; width: 150px; height: 150px; background: rgba(255,255,255,0.05); border-radius: 50%;"></div>
          <div style="font-size: 4rem; margin-bottom: 20px; opacity: 0.9;">
            <i class="fas fa-user-circle"></i>
          </div>
          <h1 style="font-weight: 700; font-size: 2.5rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.3); margin-bottom: 10px;">
            <%= user.firstName %> <%= user.lastName %>
          </h1>
          <p style="font-size: 1.2rem; opacity: 0.9; margin-bottom: 0;">
            <%= user.role %> â€¢ Member since <%= user.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %>
          </p>
        </div>
      </div>

      <div class="row">
        <!-- Personal Information Card -->
        <div class="col-lg-6 mb-4">
          <div class="profile-card" style="background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%); border-radius: 20px; box-shadow: 0 10px 30px rgba(108, 92, 231, 0.15); overflow: hidden; border: 1px solid rgba(108, 92, 231, 0.1);">
            <div class="profile-card-header" style="background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%); padding: 25px 30px; color: white;">
              <h4 class="mb-0" style="font-weight: 700; text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
                <i class="fas fa-user me-2"></i>Personal Information
              </h4>
            </div>
            <div class="profile-card-body" style="padding: 35px;">
              <div class="info-grid">
                <!-- First Name -->
                <div class="info-item mb-4" style="display: flex; align-items: center;">
                  <div class="info-icon" style="width: 45px; height: 45px; background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; box-shadow: 0 4px 12px rgba(108, 92, 231, 0.3);">
                    <i class="fas fa-user" style="color: white; font-size: 18px;"></i>
                  </div>
                  <div>
                    <small style="color: #6c757d; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; font-size: 11px;">First Name</small>
                    <div style="font-weight: 700; color: #2c3e50; font-size: 16px;"><%= user.firstName %></div>
                  </div>
                </div>

                <!-- Last Name -->
                <div class="info-item mb-4" style="display: flex; align-items: center;">
                  <div class="info-icon" style="width: 45px; height: 45px; background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; box-shadow: 0 4px 12px rgba(162, 155, 254, 0.3);">
                    <i class="fas fa-user" style="color: white; font-size: 18px;"></i>
                  </div>
                  <div>
                    <small style="color: #6c757d; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; font-size: 11px;">Last Name</small>
                    <div style="font-weight: 700; color: #2c3e50; font-size: 16px;"><%= user.lastName %></div>
                  </div>
                </div>

                <!-- Email -->
                <div class="info-item mb-4" style="display: flex; align-items: center;">
                  <div class="info-icon" style="width: 45px; height: 45px; background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; box-shadow: 0 4px 12px rgba(253, 121, 168, 0.3);">
                    <i class="fas fa-envelope" style="color: white; font-size: 18px;"></i>
                  </div>
                  <div>
                    <small style="color: #6c757d; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; font-size: 11px;">Email Address</small>
                    <div style="font-weight: 700; color: #2c3e50; font-size: 16px;"><%= user.email %></div>
                  </div>
                </div>

                <!-- Role -->
                <div class="info-item" style="display: flex; align-items: center;">
                  <div class="info-icon" style="width: 45px; height: 45px; background: linear-gradient(135deg, #00b894 0%, #00cec9 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; box-shadow: 0 4px 12px rgba(0, 184, 148, 0.3);">
                    <i class="fas fa-graduation-cap" style="color: white; font-size: 18px;"></i>
                  </div>
                  <div>
                    <small style="color: #6c757d; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; font-size: 11px;">Role</small>
                    <div style="font-weight: 700; color: #2c3e50; font-size: 16px;"><%= user.role %></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Details Card -->
        <div class="col-lg-6 mb-4">
          <div class="profile-card" style="background: linear-gradient(145deg, #ffffff 0%, #fff8f8 100%); border-radius: 20px; box-shadow: 0 10px 30px rgba(253, 121, 168, 0.15); overflow: hidden; border: 1px solid rgba(253, 121, 168, 0.1);">
            <div class="profile-card-header" style="background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%); padding: 25px 30px; color: white;">
              <h4 class="mb-0" style="font-weight: 700; text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
                <i class="fas fa-info-circle me-2"></i>Additional Details
              </h4>
            </div>
            <div class="profile-card-body" style="padding: 35px;">
              <div class="info-grid">
                <!-- Bio -->
                <div class="info-item mb-4" style="display: flex; align-items: flex-start;">
                  <div class="info-icon" style="width: 45px; height: 45px; background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; box-shadow: 0 4px 12px rgba(253, 121, 168, 0.3); flex-shrink: 0;">
                    <i class="fas fa-quote-left" style="color: white; font-size: 18px;"></i>
                  </div>
                  <div style="flex: 1;">
                    <small style="color: #6c757d; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; font-size: 11px;">Bio</small>
                    <div style="font-weight: 700; color: #2c3e50; font-size: 16px; line-height: 1.5;">
                      <% if (user.bio) { %>
                        <%= user.bio %>
                      <% } else { %>
                        <span style="color: #6c757d; font-style: italic;">No bio provided</span>
                      <% } %>
                    </div>
                  </div>
                </div>

                <!-- Member Since -->
                <div class="info-item mb-4" style="display: flex; align-items: center;">
                  <div class="info-icon" style="width: 45px; height: 45px; background: linear-gradient(135deg, #00b894 0%, #00cec9 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; box-shadow: 0 4px 12px rgba(0, 184, 148, 0.3);">
                    <i class="fas fa-calendar-alt" style="color: white; font-size: 18px;"></i>
                  </div>
                  <div>
                    <small style="color: #6c757d; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; font-size: 11px;">Member Since</small>
                    <div style="font-weight: 700; color: #2c3e50; font-size: 16px;"><%= user.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
                  </div>
                </div>

                <!-- Account Status -->
                <div class="info-item" style="display: flex; align-items: center;">
                  <div class="info-icon" style="width: 45px; height: 45px; background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; box-shadow: 0 4px 12px rgba(108, 92, 231, 0.3);">
                    <i class="fas fa-shield-alt" style="color: white; font-size: 18px;"></i>
                  </div>
                  <div>
                    <small style="color: #6c757d; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; font-size: 11px;">Account Status</small>
                    <div style="font-weight: 700; color: #2c3e50; font-size: 16px;">
                      <span style="background: linear-gradient(135deg, #00b894 0%, #00cec9 100%); color: white; padding: 4px 12px; border-radius: 20px; font-size: 14px; font-weight: 600;">Active</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="quick-actions-section mt-4">
        <div class="quick-actions-card" style="background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%); border-radius: 20px; padding: 30px; box-shadow: 0 10px 30px rgba(108, 92, 231, 0.15); border: 1px solid rgba(108, 92, 231, 0.1);">
          <h5 style="color: #2c3e50; font-weight: 700; margin-bottom: 25px; text-align: center;">
            <i class="fas fa-rocket me-2" style="color: #6c5ce7;"></i>Quick Actions
          </h5>
          <div class="row g-3">
            <div class="col-md-3">
              <a href="/upload" class="btn btn-primary w-100" style="border-radius: 15px; font-weight: 600; padding: 12px; box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3); transition: all 0.3s ease;">
                <i class="fas fa-upload me-2"></i>Upload Material
              </a>
            </div>
            <div class="col-md-3">
              <a href="/materials" class="btn btn-outline-primary w-100" style="border-radius: 15px; font-weight: 600; padding: 12px; border: 2px solid #667eea; transition: all 0.3s ease;">
                <i class="fas fa-book-open me-2"></i>View Materials
              </a>
            </div>
            <div class="col-md-3">
              <a href="/settings" class="btn btn-outline-secondary w-100" style="border-radius: 15px; font-weight: 600; padding: 12px; border: 2px solid #6c757d; transition: all 0.3s ease;">
                <i class="fas fa-cog me-2"></i>Settings
              </a>
            </div>
            <div class="col-md-3">
              <a href="/" class="btn btn-outline-info w-100" style="border-radius: 15px; font-weight: 600; padding: 12px; border: 2px solid #17a2b8; transition: all 0.3s ease;">
                <i class="fas fa-home me-2"></i>Back to Home
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.2) !important;
}
</style>
