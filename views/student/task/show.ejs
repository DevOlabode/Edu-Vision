<% layout('layout/boilerplate') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow" style="border-radius: 15px; border: none; background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%);">
        <div class="card-body p-5">
          <div class="d-flex justify-content-between align-items-start mb-4">
            <h1 class="card-title" style="color: #667eea; font-weight: 700;"><%= task.title %></h1>
            <span class="badge <%= task.priority === 'high' ? 'bg-danger' : task.priority === 'medium' ? 'bg-warning' : 'bg-success' %> text-white fs-6">
              <%= task.priority %> Priority
            </span>
          </div>

          <div class="row mb-4">
            <div class="col-md-6">
              <p class="mb-2"><strong style="color: #2c3e50;">Subject:</strong> <%= task.subject %></p>
              <p class="mb-2"><strong style="color: #2c3e50;">Type:</strong> <%= task.type %></p>
              <p class="mb-2"><strong style="color: #2c3e50;">Due Date:</strong> <%= new Date(task.dueDate).toLocaleDateString() %></p>
            </div>
            <div class="col-md-6">
              <p class="mb-2"><strong style="color: #2c3e50;">Status:</strong>
                <span class="badge <%= task.status === 'completed' ? 'bg-success' : task.status === 'in-progress' ? 'bg-primary' : task.status === 'overdue' ? 'bg-danger' : 'bg-secondary' %> text-white">
                  <%= task.status %>
                </span>
              </p>
              <p class="mb-2"><strong style="color: #2c3e50;">Difficulty:</strong> <%= task.difficulty %></p>
              <p class="mb-2"><strong style="color: #2c3e50;">Created:</strong> <%= new Date(task.createdAt).toLocaleDateString() %></p>
            </div>
          </div>

          <% if (task.description) { %>
            <div class="mb-4">
              <h5 style="color: #2c3e50; font-weight: 600;">Description</h5>
              <p class="text-muted"><%= task.description %></p>
            </div>
          <% } %>

          <% if (task.milestones && task.milestones.length > 0) { %>
            <div class="mb-4">
              <h5 style="color: #2c3e50; font-weight: 600;">Milestones</h5>
              <div class="list-group">
                <% task.milestones.forEach(milestone => { %>
                  <div class="list-group-item d-flex justify-content-between align-items-center" style="border-radius: 10px; margin-bottom: 8px; background: rgba(102, 126, 234, 0.05);">
                    <div>
                      <i class="fas <%= milestone.completed ? 'fa-check-circle text-success' : 'fa-circle text-muted' %> me-2"></i>
                      <%= milestone.title %>
                    </div>
                    <small class="text-muted"><%= new Date(milestone.dueDate).toLocaleDateString() %></small>
                  </div>
                <% }); %>
              </div>
            </div>
          <% } %>

          <div class="d-flex gap-3 mt-4">
            <a href="/task" class="btn btn-outline-primary" style="border-radius: 25px; padding: 10px 30px;">
              <i class="fas fa-arrow-left me-2"></i>Back to Tasks
            </a>
            <a href="/task/<%= task._id %>/edit" class="btn btn-warning" style="border-radius: 25px; padding: 10px 30px;">
              <i class="fas fa-edit me-2"></i>Edit Task
            </a>
            <form action="/task/<%= task._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this task?')">
              <button type="submit" class="btn btn-danger" style="border-radius: 25px; padding: 10px 30px;">
                <i class="fas fa-trash me-2"></i>Delete Task
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.list-group-item {
  border: 1px solid rgba(102, 126, 234, 0.1) !important;
}

.btn:hover {
  transform: translateY(-2px);
  transition: transform 0.3s ease;
}
</style>
