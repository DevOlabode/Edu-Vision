<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <!-- Header Card -->
      <div class="card shadow-lg mb-4" style="border-radius: 20px; border: none; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
        <div class="card-body p-5">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h1 class="display-4 font-weight-bold mb-2">My Goals</h1>
              <p class="lead mb-0 opacity-75">Track your progress and achieve your dreams!</p>
            </div>
            <a href="/goals/new" class="btn btn-light btn-lg d-flex align-items-center" style="border-radius: 25px; padding: 12px 25px;">
              <i class="fas fa-plus me-2"></i>Create New Goal
            </a>
          </div>
        </div>
      </div>

      <!-- Goals Grid -->
      <div class="row g-4">
        <% if (goals && goals.length > 0) { %>
          <% goals.forEach(goal => { %>
            <div class="col-lg-6 col-xl-4">
              <div class="card h-100 shadow goal-card" style="border-radius: 15px; border: none; background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%); transition: all 0.3s ease;">
                <div class="card-body p-4">
                  <!-- Goal Header -->
                  <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="flex-grow-1">
                      <h5 class="card-title mb-2" style="color: #2c3e50; font-weight: 600; line-height: 1.3;"><%= goal.title %></h5>
                      <span class="badge mb-2" style="background: <%= goal.category === 'Academic' ? '#667eea' : goal.category === 'Personal' ? '#764ba2' : goal.category === 'Career' ? '#28a745' : goal.category === 'Health' ? '#ffc107' : '#6c757d' %>; color: white; border-radius: 20px; padding: 5px 12px; font-size: 0.8rem;">
                        <%= goal.category %>
                      </span>
                    </div>
                    <div class="text-end">
                      <span class="badge fs-6 px-2 py-1 mb-2 <%= goal.status === 'completed' ? 'bg-success' : goal.status === 'in-progress' ? 'bg-primary' : goal.status === 'not-started' ? 'bg-secondary' : 'bg-danger' %>">
                        <%= goal.status.replace('-', ' ').toUpperCase() %>
                      </span>
                    </div>
                  </div>

                  <!-- Progress Bar -->
                  <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <small class="text-muted">Progress</small>
                      <small class="fw-bold" style="color: #667eea;"><%= goal.progress %>%</small>
                    </div>
                    <div class="progress" style="height: 8px; border-radius: 4px;">
                      <div class="progress-bar" role="progressbar" style="width: <%= goal.progress %>%; background: linear-gradient(90deg, #667eea, #764ba2); border-radius: 4px;" aria-valuenow="<%= goal.progress %>" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                  </div>

                  <!-- Target Date -->
                  <div class="mb-3">
                    <small class="text-muted d-block">
                      <i class="fas fa-calendar-alt me-1"></i>Target: <%= new Date(goal.targetDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                    </small>
                  </div>

                  <!-- Description Preview -->
                  <% if (goal.description) { %>
                    <p class="card-text text-muted mb-3" style="font-size: 0.9rem; line-height: 1.4;">
                      <%= goal.description.length > 100 ? goal.description.substring(0, 100) + '...' : goal.description %>
                    </p>
                  <% } %>

                  <!-- Milestones Count -->
                  <% if (goal.milestones && goal.milestones.length > 0) { %>
                    <div class="mb-3">
                      <small class="text-muted">
                        <i class="fas fa-flag me-1"></i>
                        <%= goal.milestones.filter(m => m.completed).length %>/<%= goal.milestones.length %> milestones completed
                      </small>
                    </div>
                  <% } %>

                  <!-- Action Buttons -->
                  <div class="d-flex gap-2 mt-auto">
                    <a href="/goals/<%= goal._id %>" class="btn btn-outline-primary btn-sm flex-fill" style="border-radius: 20px;">
                      <i class="fas fa-eye me-1"></i>View
                    </a>
                    <a href="/goals/<%= goal._id %>/edit" class="btn btn-outline-warning btn-sm flex-fill" style="border-radius: 20px;">
                      <i class="fas fa-edit me-1"></i>Edit
                    </a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <!-- Empty State -->
          <div class="col-12">
            <div class="card shadow" style="border-radius: 15px; border: none; background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%);">
              <div class="card-body p-5 text-center">
                <i class="fas fa-bullseye fa-4x text-muted mb-4"></i>
                <h3 class="text-muted mb-3">No Goals Yet</h3>
                <p class="text-muted mb-4">Start your journey by creating your first goal. Let AI help you plan and achieve it!</p>
                <a href="/goals/new" class="btn btn-primary btn-lg" style="border-radius: 25px; padding: 12px 30px;">
                  <i class="fas fa-plus me-2"></i>Create Your First Goal
                </a>
              </div>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Statistics Card (if there are goals) -->
      <% if (goals && goals.length > 0) { %>
        <div class="card shadow mt-4" style="border-radius: 15px; border: none; background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%);">
          <div class="card-body p-4">
            <h5 class="card-title mb-4" style="color: #2c3e50; font-weight: 600;">
              <i class="fas fa-chart-bar text-primary me-2"></i>Goal Statistics
            </h5>
            <div class="row g-4">
              <div class="col-md-3">
                <div class="text-center">
                  <div class="stat-number display-4 fw-bold" style="color: #667eea;"><%= goals.length %></div>
                  <div class="stat-label text-muted">Total Goals</div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center">
                  <div class="stat-number display-4 fw-bold" style="color: #28a745;"><%= goals.filter(g => g.status === 'completed').length %></div>
                  <div class="stat-label text-muted">Completed</div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center">
                  <div class="stat-number display-4 fw-bold" style="color: #ffc107;"><%= goals.filter(g => g.status === 'in-progress').length %></div>
                  <div class="stat-label text-muted">In Progress</div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center">
                  <div class="stat-number display-4 fw-bold" style="color: #dc3545;"><%= goals.filter(g => g.status === 'abandoned').length %></div>
                  <div class="stat-label text-muted">Abandoned</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<style>
.goal-card {
  transition: all 0.3s ease;
}

.goal-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15) !important;
}

.progress-bar {
  transition: width 0.3s ease;
}

.stat-number {
  font-size: 2.5rem;
  line-height: 1;
}

@media (max-width: 768px) {
  .display-4 {
    font-size: 2rem;
  }

  .stat-number {
    font-size: 2rem;
  }
}
</style>
