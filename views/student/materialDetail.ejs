<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3><%= material.title %></h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong>File Name:</strong> <%= material.fileName %></p>
              <p><strong>File Type:</strong> <%= material.fileType %></p>
              <p><strong>File Size:</strong> <%= (material.fileSize / 1024).toFixed(2) %> KB</p>
              <p><strong>Status:</strong>
                <span class="badge <%= material.status === 'ready' ? 'bg-success' : material.status === 'processing' ? 'bg-warning' : 'bg-danger' %>">
                  <%= material.status %>
                </span>
              </p>
              <p><strong>Uploaded:</strong> <%= new Date(material.createdAt).toLocaleDateString() %></p>
            </div>
            <div class="col-md-6">
              <a href="https://res.cloudinary.com/demb9vgs8/raw/upload/<%= material.cloudinaryId %>" target="_blank" class="btn btn-primary">Download File</a>
              <form action="/materials/<%= material._id %>?_method=DELETE" method="POST" class="d-inline ms-2">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this material?')">Delete</button>
              </form>
            </div>
          </div>

          <% if (material.summary) { %>
            <hr>
            <div class="mt-3">
              <% if (material.summary.studyNotes && material.summary.studyNotes.length > 0) { %>
                <h5>Study Notes:</h5>
                <ul class="list-group list-group-flush mb-4">
                  <% material.summary.studyNotes.forEach(note => { %>
                    <li class="list-group-item"><%= note %></li>
                  <% }); %>
                </ul>
              <% } %>

              <% if (material.summary.flashcards && material.summary.flashcards.length > 0) { %>
                <h5>Flashcards:</h5>
                <div class="accordion" id="flashcardsAccordion">
                  <% material.summary.flashcards.forEach((card, index) => { %>
                    <div class="accordion-item">
                      <h2 class="accordion-header" id="heading<%= index %>">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
                          <%= card.question %>
                        </button>
                      </h2>
                      <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#flashcardsAccordion">
                        <div class="accordion-body">
                          <%= card.answer %>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
